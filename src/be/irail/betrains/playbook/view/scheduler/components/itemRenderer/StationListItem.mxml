<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				autoDrawBackground="false"
				height="50"
				width="100%">

	<s:states>
		<s:State name="normal"/>
		<s:State name="selected"/>
	</s:states>
	<fx:Script>
		<![CDATA[
			import be.irail.api.data.stations.IRStation;
			import be.irail.betrains.playbook.data.SchedulerQuery;
			import be.irail.betrains.playbook.utils.DateUtils;
			import be.irail.betrains.playbook.utils.FormatUtil;

			import qnx.locale.LocaleManager;

			override public function set data(value:Object):void {
				super.data = value;

				if (!value) {
					_station = null;
					return;
				}

				if (data is IRStation) {
					_station = value as IRStation;
					dispatchEvent(new Event("stationChange"));
				}
			}

			// ----------------------------
			// station
			// ----------------------------

			private var _station:IRStation;

			[Bindable(event="stationChange")]
			public function get station():IRStation {
				return _station;
			}

			public function set station(value:IRStation):void {
				if (value !== _station) {
					_station = value;
					dispatchEvent(new Event("stationChange"));
				}
			}

			// ----------------------------
			// stationName (read-only)
			// ----------------------------

			[Bindable(event="stationChange")]
			public function get stationName():String {
				if (!station) {
					return "";
				}
				return station.formattedName;
			}
		]]>
	</fx:Script>

	<s:Rect left="0"
			right="0"
			top="0"
			bottom="0">
		<s:fill>
			<s:BitmapFill source="@Embed(source='images/cellBg.png')"
						  fillMode="repeat"
						  smooth="true"/>
		</s:fill>
	</s:Rect>

	<s:Rect left="0"
			right="0"
			top="0"
			bottom="0"
			includeIn="selected">
		<s:fill>
			<s:SolidColor color="#ffaa20"
						  alpha=".40"/>
		</s:fill>
	</s:Rect>

	<s:Label text="{stationName}"
			 fontSize="16"
			 color="0"
			 width="100%"
			 height="100%"
			 textAlign="center"
			 fontWeight="bold"
			 verticalAlign="middle"/>

	<s:Line left="0"
			right="0"
			top="0"
			visible="{itemIndex==0}">
		<s:stroke>
			<s:SolidColorStroke color="0"
								weight="1"/>
		</s:stroke>
	</s:Line>

	<s:Line left="0"
			right="0"
			bottom="0">
		<s:stroke>
			<s:SolidColorStroke color="0"
								weight="1"/>
		</s:stroke>
	</s:Line>
</s:ItemRenderer>
