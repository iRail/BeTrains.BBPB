<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
					  xmlns:s="library://ns.adobe.com/flex/spark"
					  xmlns:mx="library://ns.adobe.com/flex/mx"
					  width="100%"
					  height="80"
					  skinClass="be.irail.betrains.playbook.skins.ApplicationBarSkin">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			// ----------------------------
			// selectectedIndex
			// ----------------------------

			private var _selectectedIndex:int;

			[Bindable(event="selectectedIndexChange")]
			public function get selectectedIndex():int {
				return _selectectedIndex;
			}

			public function set selectectedIndex(value:int):void {
				if (value != _selectectedIndex) {
					_selectectedIndex = value;
					dispatchEvent(new Event("selectectedIndexChange"));
				}
			}
		]]>
	</fx:Script>
</s:SkinnableContainer>
